<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background2"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText

        android:id="@+id/signInEmailEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_shape"
        android:hint="Email"
        android:inputType="textEmailAddress"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginTop="300dp"
        android:textColor="@color/black"
        android:textColorHint="@color/colorPrimary" />
    />
    <EditText

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/signInPasswordEditTextId"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Password"

        android:background="@drawable/input_shape"
        android:textColor="@color/black"
        />
    <RadioGroup
        android:id="@+id/radiogroupid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        ><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usertype"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <RadioButton
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Doctor"
        android:textSize="20sp"
        android:onClick="checkButton"

        ></RadioButton>
    <RadioButton
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Patient"
        android:textSize="20sp"
        android:onClick="checkButton"

        ></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/signInButtonId"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="SIGNIN"
        android:layout_marginTop="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpTextViewId"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Are you not registered? SIGNUP!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressbarId"
        />
</LinearLayout>